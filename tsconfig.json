{
  "compilerOptions": {
    "moduleResolution": "node",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "target": "esnext",  // ✅ Change from "es5" to "esnext" for Vite compatibility
    "lib": ["dom", "es6"],
    "jsx": "react-jsx",  // ✅ Updated for React 18+
    "strict": true,
    "module": "esnext",
    "skipLibCheck": true,
    "types": ["vite/client"]  // ✅ Move inside "compilerOptions"
  },
  "include": ["src"],
  "exclude": ["node_modules"]
}
